extends layouts/default
block head
	link(rel="stylesheet", href="public.min.css")
	script(src="public.min.js")
block body
	.title-container
		.title
			p beachJudge
			form.judge-form(auto-complete="off", action="javascript:void(0)" onsubmit="judgeLogin(this)")
				input.string(name="username", type="text", placeholder="Username", autocomplete="off", required)
				input.string(name="password", type="password", placeholder="Password", autocomplete="off", required)
				input.button(value="Login", type="submit")
			p.login-error Login Failed!
